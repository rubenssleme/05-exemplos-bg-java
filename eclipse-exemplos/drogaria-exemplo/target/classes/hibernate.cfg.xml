<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
                    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configurações de Conexão com o Banco de Dados -->
        <property name="hibernate.connection.driver_class">net.sourceforge.jtds.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:jtds:sqlserver://localhost/bdxicongonhas</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">1234567</property>
        <!-- Pool de Conexões -->
        <property name="connection.pool_size">1</property>
        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <!-- Gerenciamento do Contexto das Sessões -->
        <property name="current_session_context_class">thread</property>
        <!-- Cache de Segundo Nível -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        <!-- Mostra as SQLs Geradas -->
        <property name="show_sql">true</property>
        <!-- Cria as tabelas do banco de dados -->
        <property name="hbm2ddl.auto">create</property>  
        <!-- Mapeamento das entidades -->
        <mapping class="br.com.lm.drogaria.dominio.Cidade"/>
        <mapping class="br.com.lm.drogaria.dominio.Estado"/>
        <mapping class="br.com.lm.drogaria.dominio.Fabricante"/>
        <mapping class="br.com.lm.drogaria.dominio.Produto"/>
        <mapping class="br.com.lm.drogaria.dominio.Pessoa"/>
        <mapping class="br.com.lm.drogaria.dominio.Usuario"/>
        <mapping class="br.com.lm.drogaria.dominio.Cliente"/>
        <mapping class="br.com.lm.drogaria.dominio.Funcionario"/>
        <mapping class="br.com.lm.drogaria.dominio.Venda"/>
        <mapping class="br.com.lm.drogaria.dominio.ItemVenda"/>
    </session-factory>
</hibernate-configuration>
